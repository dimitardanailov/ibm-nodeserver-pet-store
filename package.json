    "appmetrics-zipkin": "^1.0.4",
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "log4js": "^1.1.1",
    "strong-supervisor": "^6.2.0",
    "ibm-cloud-env": "^0"
  },
  "devDependencies": {
    "nodemon": "^1.12.1",
    "chai": "^4.0.0",
    "mocha": "^3.4.2",
    "nyc": "^10.3.2",
    "request": "^2.82.0",
    "chalk": "^1.1.3",
    "prompt-confirm": "^1.2.0"
